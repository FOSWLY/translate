{
  "name": "@toil/translate",
  "description": "An unofficial library to use Yandex Translation API for free",
  "version": "1.0.0",
  "author": "Toil",
  "license": "MIT",
  "type": "module",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "devDependencies": {
    "@sinclair/typebox-codegen": "^0.10.5",
    "@types/bun": "latest",
    "@types/eslint__js": "^8.42.3",
    "eslint": "^9.13.0",
    "eslint-plugin-oxlint": "0.10.0",
    "eslint-plugin-sonarjs": "2.0.4",
    "husky": "^9.1.6",
    "oxlint": "0.10.0",
    "tsc-esm-fix": "^3.1.0",
    "typedoc": "0.26.10",
    "typedoc-plugin-include-example": "^1.3.0",
    "typedoc-plugin-rename-defaults": "^0.7.1",
    "typescript-eslint": "^8.10.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FOSWLY/translate"
  },
  "peerDependencies": {
    "typescript": "^5.6.2"
  },
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./errors": {
      "require": "./dist/errors.js",
      "import": "./dist/errors.js",
      "types": "./dist/errors.d.ts"
    },
    "./config": {
      "require": "./dist/config/config.js",
      "import": "./dist/config/config.js",
      "types": "./dist/config/config.d.ts"
    },
    "./providers": {
      "require": "./dist/providers/index.js",
      "import": "./dist/providers/index.js",
      "types": "./dist/providers/index.d.ts"
    },
    "./types": {
      "require": "./dist/types/index.js",
      "import": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "bugs": {
    "url": "https://github.com/FOSWLY/translate/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/FOSWLY/translate",
  "keywords": [
    "yandex",
    "foswly",
    "translate",
    "text",
    "detect",
    "langs",
    "language"
  ],
  "scripts": {
    "test": "bun test",
    "build:default": "tsc --project tsconfig.build.json --outdir ./dist && tsc-esm-fix --tsconfig tsconfig.build.json",
    "build:typebox": "bun run ./scripts/typebox-gen.ts",
    "build:doc": "typedoc --options typedoc.json --tsconfig tsconfig.build.json",
    "build:bun": "bun build:default && bun build:typebox && bun build:doc",
    "lint": "bunx oxlint --ignore-path=.oxlintignore && bunx eslint",
    "prepare": "husky"
  }
}
